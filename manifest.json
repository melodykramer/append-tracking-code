{
  "name": "NPR FOOD PINTEREST LINK",
  "version": "1",
  "manifest_version": 2,
  "description": "Adds tracking code for NPR Food and Pinterest",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://npr.org/*",
    "*://www.npr.org/*"
  ],
  "background": { 
    "scripts": ["background.js"]
  },
  "content_scripts": [{
    "matches": [
      "*://npr.org/*",
      "*://www.npr.org/*"
    ],
    "css": ["content.css"],
    "run_at": "document_end"
  }]
}
